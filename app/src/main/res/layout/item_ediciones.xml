<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageViewEdiciones"
                android:layout_width="173dp"
                android:layout_height="262dp"
                app:srcCompat="@drawable/cienciatecnologia" />

            <TextView
                android:id="@+id/txttituloediciones"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="3dp"
                android:layout_marginTop="11dp"
                android:layout_toEndOf="@+id/imageViewEdiciones"
                android:fontFamily="@font/roboto_light"
                android:text="Revista Ciencia y Tecnolog\u00eda Enero - Junio 2020"
                android:textAlignment="viewStart"
                android:textColor="#0E0E0E"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txttituloediciones"
                android:layout_marginStart="4dp"
                android:layout_marginTop="17dp"
                android:layout_toEndOf="@+id/imageViewEdiciones"
                android:fontFamily="@font/roboto_light"
                android:text="Volumen: "
                android:textColor="#090909"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView4"
                android:layout_marginStart="4dp"
                android:layout_marginTop="15dp"
                android:layout_toEndOf="@+id/imageViewEdiciones"
                android:fontFamily="@font/roboto_light"
                android:text="Numero: "
                android:textColor="#131313"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView5"
                android:layout_marginStart="4dp"
                android:layout_marginTop="17dp"
                android:layout_toEndOf="@+id/imageViewEdiciones"
                android:fontFamily="@font/roboto_light"
                android:text="Año: "
                android:textColor="#101010"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView8"
                android:layout_marginStart="6dp"
                android:layout_marginTop="16dp"
                android:layout_toEndOf="@+id/imageViewEdiciones"
                android:fontFamily="@font/roboto_light"
                android:text="Fecha de publicación: "
                android:textColor="#050505"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView6"
                android:layout_marginStart="4dp"
                android:layout_marginTop="18dp"
                android:layout_toEndOf="@+id/imageViewEdiciones"
                android:fontFamily="@font/roboto_light"
                android:text="Doi:"
                android:textColor="#070707"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtvolumenediciones"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txttituloediciones"
                android:layout_marginStart="1dp"
                android:layout_marginTop="17dp"
                android:layout_toEndOf="@+id/textView4"
                android:fontFamily="@font/roboto_light"
                android:text="TextView"
                android:textColor="#090909" />

            <TextView
                android:id="@+id/txtnumeroediciones"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtvolumenediciones"
                android:layout_marginStart="2dp"
                android:layout_marginTop="16dp"
                android:layout_toEndOf="@+id/textView5"
                android:fontFamily="@font/roboto_light"
                android:text="TextView"
                android:textColor="#040303" />

            <TextView
                android:id="@+id/txtanioediciones"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtnumeroediciones"
                android:layout_marginStart="4dp"
                android:layout_marginTop="17dp"
                android:layout_toEndOf="@+id/textView6"
                android:fontFamily="@font/roboto_light"
                android:text="TextView"
                android:textColor="#070707" />

            <TextView
                android:id="@+id/txtfechapubliediciones"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView7"
                android:layout_marginStart="4dp"
                android:layout_marginTop="7dp"
                android:layout_toEndOf="@+id/imageViewEdiciones"
                android:fontFamily="@font/roboto_light"
                android:text="TextView"
                android:textColor="#070707" />

            <TextView
                android:id="@+id/txtdoiediciones"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtanioediciones"
                android:layout_marginStart="12dp"
                android:layout_marginTop="16dp"
                android:layout_toEndOf="@+id/textView8"
                android:fontFamily="@font/roboto_light"
                android:text="TextView"
                android:textColor="#0C0C0C" />


        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>