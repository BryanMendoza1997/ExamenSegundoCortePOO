<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp">

        <RelativeLayout
            android:id="@+id/Relativecontenedor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txttutuloarticulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="0dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="0dp"
                android:text="Evaluación y restauración ecológica “Lisan Wasi” comunidad San Pedro, parroquia Tarqui, Cantón Pastaza"
                android:textAlignment="center"
                android:textColor="#ED3D3D"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtautoresarticulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txttutuloarticulo"
                android:layout_marginTop="12dp"
                android:text="Jessy Paulina Guerrero Rubio, Angélica María Tasambay Salazar, Fernando Cofre Santos, Cristian Santiago Jácome Segovia, Carlos Raúl Valverde Lara, Yusimy Jiménez Rojas"
                android:textAlignment="center"
                android:textColor="#070707"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/txtseccion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtautoresarticulo"
                android:layout_marginTop="12dp"
                android:text="Sección"
                android:textColor="#090909"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textseccionarticulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtautoresarticulo"
                android:layout_marginStart="11dp"
                android:layout_marginTop="11dp"
                android:layout_toEndOf="@+id/txtseccion"
                android:text="Ciencias Agrarias"
                android:textColor="#0B0A0A" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textseccionarticulo"
                android:layout_marginTop="11dp"
                android:text="Fecha de Publicación: "
                android:textColor="#090909"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtfechaarticulo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textseccionarticulo"
                android:layout_marginStart="5dp"
                android:layout_marginTop="12dp"
                android:layout_toEndOf="@+id/textView11"
                android:text="2020-06-30"
                android:textColor="#050505"
                android:layout_marginBottom="13dp"/>

        </RelativeLayout>



    </androidx.cardview.widget.CardView>

</LinearLayout>